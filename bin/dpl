#!/bin/bash

# A script to quickly change dirp projects without having to select from list 

if [ $HOSTNAME = "lefty9000" ]; then
	DIRP_PROJECTS_DIR="$HOME/dirlists/leftygray/"
fi

if [ $HOSTNAME = "KI840G5W10-22" ]; then 
	DIRP_PROJECTS_DIR="$HOME/dirlists/rgray/"
fi

source ~/dirp/dirp.bash

# Copy of dirpp() and dirp_appendProject
echo "Projects:"
projects=($(ls $DIRP_PROJECTS_DIR))

for (( i=0; i < ${#projects[@]}; i++));
do
	echo -e "$[i+1]) ${projects[i]}"
done

